<!-- header start-->
<cu-custom bgColor="bg-gradual-white" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">潜力评价展示</view>
</cu-custom>
<!-- header end-->
<!-- body start-->
<scroll-view scroll-y class="scrollPage">
	<view class='page__wrap bg__member-hd flexbox bg-gray'>

		<!-- card-wrap start -->
		<view class="card-wrap card-charts shadow-grey posture-wrap">

			<view class="cu-bar bg-white solid-bottom border-bottom">
				<view class="action">{{posture.title}}</view>
				<view class="action text-gray">
					{{posture.updateTime}}
					<text class="cuIcon-refresh sm margin-left-xs"></text>
				</view>
			</view>
			<!-- card-body start -->
			<view class="card-body charts-body">

				<ec-canvas class="ec-canvas" id="mychartGaugePosture" canvas-id="mychartGaugePosture" ec="{{ mychartGaugePosture }}"></ec-canvas>

			</view>
			<!-- card-body end -->
		</view>
		<!-- card-wrap end -->


		<!-- card-wrap Ability start -->
		<view class="card-wrap shadow-grey posture-detil-wrap"
      wx:for="{{posture.postureDetail}}" 
      wx:key="item" 
      data-id="{{item.id}}">
			<view class="flex flex-wrap justify-center align-top">
				<view class="flex-sub solid-right text-center font-48">
					{{item.title}}
				</view>
				<view class="flex-twice text-center flex justify-center align-center">
					<view class="basis-df"
						wx:for="{{item.lists}}" 
						wx:key="item" 
						data-id="{{listitem.id}}"
						 wx:for-item="listitem"
						>
						<view class="font-28">{{listitem.subTitle}}</view>
            <image  class="cu-avatar radius lg" src="{{listitem.image}}"></image>
            <view class="font-36">{{listitem.text}}</view>
					</view>
				</view>
			</view>
		</view>
    <!-- card-wrap potentialAbility end -->


	</view>
	<view class="cu-tabbar-height"></view>
</scroll-view>
<!-- body end-->