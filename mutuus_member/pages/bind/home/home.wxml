<!-- header start-->
<cu-custom bgColor="bg-gradual-white" isBack="{{false}}">
  <view slot="backText">返回</view>
  <view slot="content">mutuus运动公园</view>
</cu-custom>
<!-- header end-->
<scroll-view scroll-y class="scrollPage">
<view class='page__wrap bg__member-hd flexbox bg-gray'>

  <view class="tip-box {{tipShow}}"
  bind:tap=""
  id="tip">{{tipText}}</view>

  <view class="userinfo">
    <button
      open-type="getUserInfo"
      lang="zh_CN"
      bindgetuserinfo="bindGetUserInfo"
      style="background-image: url({{avatarUrl}})"
      class="userinfo-avatar"
    >
    </button>
    <view class="username">
      {{nickName}}
    </view>
  </view>

  <form bindsubmit="FormSubmit">
    <view class="cu-form-group bg-{{inputBgColor}} round padding margin-bottom-sm">
        <view class="title">
          <text class="cuIcon-people text-orange"></text>
        </view>
        <view class="content">
          <input
          type="text"
          name="username"
          placeholder="请输入会员姓名"
          maxlength="10"
          bindblur="OnUsernameChange"
          value="{{username}}"
          data-model="username"
          bindinput="inputWacth"
          disabled="{{isInputDisabled}}"
          ></input>
        </view>
    </view>
    <view class="cu-form-group bg-{{inputBgColor}} round padding padding-top-xs padding-bottom-xs margin-bottom-sm">
        <view class="title">
          <text class="cuIcon-time text-orange"></text>
        </view>
        <view class="content">
          <picker
          mode="date"
          start="2015-09-01"
          end="2020-09-01"
          data-model="pickerdate"
          bindchange="OnDateChange">
            <view class="picker" style="text-align:left;">
              {{pickerdate}}
            </view>
            <input type="date"
            name="userbirthday"
            data-model="userbirthday"
            value="{{userbirthday}}"
            disabled="{{isInputDisabled}}"
            class="hide"
            bindinput="inputWacth"></input>
          </picker>
        </view>
    </view>
    <view class="cu-form-group bg-{{inputBgColor}} round padding margin-bottom-sm">
        <view class="title">
          <text class="cuIcon-phone text-orange"></text>
        </view>
        <view class="content">
          <input
          name="phone"
          type="number"
          placeholder="请输入会员手机"
          maxlength="11"
          data-model="phone"
          bindinput="inputWacth"
          disabled="{{isInputDisabled}}"
          bindblur="OnPhoneChange"></input>
        </view>
    </view>
    <view class="cu-form-group bg-{{inputBgColor}} round padding margin-bottom-lg">
        <view class="title">
          <text class="cuIcon-text text-orange"></text>
        </view>
        <view class="content">
          <input
          name="code"
          placeholder="请输入验证码"
          data-model="code"
          bindinput="inputWacth"
          bindblur="OnCodeChange"
          disabled="{{isInputDisabled}}"
          maxlength="4"
          ></input>
        </view>

          <button class="cu-btn round bg-mutuus-blue btn-code {{ShowCodeBtn}}"
          bindtap="GetNewCode"
          >获取验证码</button>

          <image class="codepic margin-right-lg {{ShowCodepic}}"
          src="./../../../static/images/code/code{{codeUrl}}.png"
          bindtap="GetNewCodePic"
          ></image>
    </view>

    <button class="cu-btn block bg-mutuus-blue round padding lg w-100"
      formType="submit"
      bindgetuserinfo="checkForm"
    >
      <text class="cuIcon-friendadd"></text>
      <text class="padding-left">会员绑定</text>
    </button>
  </form>
</view>
<view class="cu-tabbar-height"></view>
</scroll-view>